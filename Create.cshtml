@model sample.ViewModels.CreateViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error {
        color: red;
    }
</style>
<h1>Create</h1>
<h2>MenuItem</h2>
@using (Html.BeginForm("Create", "MenuItem",new { @class="form-horizontal"}))
{

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.Name,new { @class="control-label col-sm-2"})
        @Html.TextBoxFor(m => m.MenuItem.Name, new { @class = "form-control" })
    </div>

    @Html.ValidationMessageFor(m => m.MenuItem.Name)

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.FreeDelivery, new { @class = "control-label col-sm-2" })
        @Html.CheckBoxFor(m => m.MenuItem.FreeDelivery)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.Price, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(m => m.MenuItem.Price, new { @class = "form-control" })
    </div>

    @Html.ValidationMessageFor(m => m.MenuItem.Price)

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.DateOfLaunch, new { @class = "control-label col-sm-2" })
        
        @Html.TextBoxFor(m => m.MenuItem.DateOfLaunch, new { @class = "form-control" ,type="date"})
           
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.Active, new { @class = "control-label col-sm-2" })
        @Html.CheckBoxFor(m => m.MenuItem.Active)
    </div>

    @Html.ValidationMessageFor(m => m.MenuItem.Active);

    <div class="form-group">
        @Html.LabelFor(m => m.Categories, new { @class = "control-label col-sm-2" })
        @Html.DropDownListFor(m => m.MenuItem.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select", new { @class = "form-control" })
    </div>

    @Html.ValidationMessageFor(m => m.MenuItem.CategoryId)

    <div><button type="submit" id="submit">Create</button></div>

    <div>@Html.ActionLink("BackToList", "Index", "MenuItem", new { isAdmin = true }, null)</div>
}

